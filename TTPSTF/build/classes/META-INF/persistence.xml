<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
 http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">
<persistence-unit name="alusinarte">
	<provider>org.hibernate.ejb.HibernatePersistence</provider>
	<class>alusinarte.classes.User</class>
	<class>alusinarte.classes.Event</class>
	<class>alusinarte.classes.Career</class>
	<properties>
		<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
		<property name="hibernate.connection.password" value="root"/>
		<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/alusinarte"/>
		<property name="hibernate.connection.username" value="alusinarte" />
		<property name="hibernate.connection.password" value="alusinarte" />
		<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
		<property name="hibernate.hbm2ddl.auto" value="update" />

	</properties>
</persistence-unit>
</persistence>